<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inherit_website_layout" inherit_id="website.layout">
        <xpath expr="//header" position="attributes">
            <attribute name="t-if">not hide_header</attribute>
        </xpath>
        <xpath expr="//footer" position="attributes">
            <attribute name="t-if">not hide_header</attribute>
        </xpath>
    </template>
    <template id="layout" name="Signage Layout">
        <t t-call="website.layout">
            <p id="hide_signage_edit" class="hidden" t-att-data-value="hide_signage_edit"/>
            <t t-raw="0" />
        </t>
    </template>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Signage Customize CSS JS">
        <xpath expr="." position="inside">
            <link href="/signage/static/src/css/main.css" rel="stylesheet" />
            <script type="text/javascript" src="/signage/static/src/js/main.js" />
        </xpath>
    </template>
</odoo>
