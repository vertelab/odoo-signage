  <!-- ## INDEX SHOWCASE -->
  <!--
       This file contain three parts.
       ** >> 1. Code for the index page to the project / module.
       2. Code for all templates that can be selected.
       3. Code for ... hmm... something good! :-)
  -->
  <template id="signage_list" name="Signage List">
    <title>Master Your Showcases</title>
    <t t-call="website.layout">
      <div class="row">
        <div class="col-sm-4" />
        <div class="col-sm-4">
          <h2>Signage</h2>
          <!-- 
               <t t-raw="signages" />
               <img src="/signage/static/src/img/documentation.gif" />
          -->
          <!-- ##  FOR EACH-LOOP -->
          <ul t-foreach="signages" t-as="signage">
            <div class="accordion" id="accordionExample">
              <div class="card">
                <div class="card-header" t-att-id="'heading%s' % signage.id">
                  <h5 class="mb-0">
                    <!-- ## MENU :: COLLAPSE -->
                    <span class="fa fa-folder" style="margin: 0 auto;" data-original-title="Collapse project" t-att-title="'Collapse project, %s' % signage.name" />
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" t-att-data-target="'#collapse%s' % signage.id" aria-expanded="false" aria-controls="collapse" title="Collapse">
                      <span t-field="signage.name" />
                    </button>
                    <!-- ## MENU :: EDIT -->
                    <!--
                         # MENU = SIGNAGE
                         #/signage/admin/menu/{menu.id}/update
                    -->
                    <a t-att-href="'/signage/admin/menu/%s/edit' % signage.id">
                      <span class="fa fa-pencil" style="margin: 0 auto;" data-original-title="Edit menu" title="Edit menu" border="0" />
                    </a>
                    <span>&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;</span>
                    <!-- ## MENU :: VIEW WITH TOKEN -->
                    <!--
                         # SHOW + TOKEN
                         # /signage/view/menu/{menu.name}/all?token=123
                         # https://fontawesome.com/v4.7.0/icons/
                         # https://fontawesome.com/v4.7.0/icon/eye
                    -->
                    <a t-att-href="'/signage/view/menu/%s/all?token=%s' % (signage.name_url, signage.token)" target="_blank" title="View with token.">
                      <i class="fa fa-eye" />
                      <span t-field="signage.name" />
                    </a>
                    <!-- ## PROJECT :: VIEW TO EDIT DATA  -->
                    <!--
                         # SHOW + TOKEN
                         # /signage/view/menu/{menu.id}/all/
                    -->
                  </h5>
                </div>
                <!-- ## AREA / CONTENT :: EDIT -->
                <div t-att-id="'collapse%s' % signage.id" class="collapse" t-att-aria-labelledby="'heading%s' % signage.id" data-parent="#accordionExample">
                  <div class="card-body">
                    <ul t-foreach="signage.area_ids" t-as="area">
                      <li>
                        <span class="fa fa-file-o" style="margin: 0 auto;" data-original-title="Open to view or to edit" t-att-title="'Open to view or to edit, %s' % signage.name" />
                        <span t-field="area.name" />
                        Limit
                        <span t-field="area.limit" />
                        <ul>
                          <!--
                               ## LOOP THROUGH ALL PAGES
                               # https://fontawesome.com/v4.7.0/icons/
                               # https://fontawesome.com/v4.7.0/icon/file
                          -->
                          <t t-foreach="area.page_ids" t-as="page">
                            <li>
                              <!-- ## LOOK -->
                              <span class="fa fa-file" style="margin: 0 auto;" data-original-title="Get content for project" t-att-title="'Get content for project %s' % signage.id" />
                              <span t-field="page.name" />
                            </li>
                          </t>
                        </ul>
                      </li>
                    </ul>
                    <!-- // ADD NEW  -->
                  </div>
                </div>
                <!-- ## ADD AREA -->
                <!-- // ## CONTENT :: EDIT -->
              </div>
            </div>
          </ul>
          <!-- // ##  FOR EACH-LOOP -->
          <!-- ## ADD SIGNAGE SHOWLIST -->
          <div class="col-sm-2" />
          <div class="col-sm-8">
            <!-- ## 2019-02-04 :: TEMPLATE SELECTION -->
            <!--
                 Bootstrap Radio Buttons, for the best developing copy/paste experience.
                 https://www.w3schools.com/bootstrap/bootstrap_forms_inputs.asp
            -->
            <form action="/signage/admin/menu/insert" method="post">
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_1" checked="1" />
                <!--
                     <img src="/signage/static/src/img/documentation.gif" />
                -->
                <span>Showcase layout 1</span>
                <img src="/signage/static/src/img/showcase_1.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_2_1" />
                <span>Showcase layout 2:1</span>
                <img src="/signage/static/src/img/showcase_2_1.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_2_2" />
                <span>Showcase layout 2:2</span>
                <img src="/signage/static/src/img/showcase_2_2.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_3_1" />
                <span>Showcase layout 3:1</span>
                <img src="/signage/static/src/img/showcase_3_1.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_3_2" />
                <span>Showcase layout 3:2</span>
                <img src="/signage/static/src/img/showcase_3_2.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_3_3" />
                <span>Showcase layout 3:3</span>
                <img src="/signage/static/src/img/showcase_3_3.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_4" />
                <span>Showcase layout 4</span>
                <img src="/signage/static/src/img/showcase_4.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_5_1" />
                <span>Showcase layout 5:1</span>
                <img src="/signage/static/src/img/showcase_5_1.png" />
                <br />
                <br />
              </label>
              <label class="radio-inline">
                <input type="radio" name="default_layout" value="signage.showcase_5_2" />
                <span>Showcase layout 5:2</span>
                <img src="/signage/static/src/img/showcase_5_2.png" />
                <br />
                <br />
              </label>
              <!--
                   <select name="templateID">
                   <option value="0">Choose template</option>
                   <option value="2">Template 2 - 2 pages</option>
                   <option value="3">Template 3 - 3 pages</option>
                   <option value="4">Template 4 - 4 pages</option>
                   <option value="5">Template 5 - 5 pages</option>
                   </select>
              -->
              <input type="text" width="8" name="title" />
              <input type="submit" value="Add Signage" />
            </form>
          </div>
          <div class="col-sm-2" />
        </div>
        <div class="col-sm-4" />
      </div>
    </t>
  </template>
  <template id="signage_default_layout_4" name="Signage Default Layout 2x2">
    <t t-call="signage.layout">
      <style>
        <link href="https://fonts.googleapis.com/css?family=PT+Sans+Narrow" rel="stylesheet" />
      </style>
      <style>
        body {
        font-family: 'PT Sans Narrow', sans-serif;
        }
      </style>
      <div style="height: 100%; background-color: #94A8B2;">
        <section style="height: 100%; background-color: #94A8B2;">
          <div class="container" style="width: 100%; height: 100%; padding: 0px;">
            <div style="width: 100%; height: 49.8%; padding: 0px; padding: 0.4% 0.4% 0.2% 0.4%;">
              <div style="width: 49.8%; height: 100%; background-color: #fff; padding: 0px; margin-right: 0.2%; background-color: #DEE6ED; position: relative; float: left;">
                <t t-call="quarter1" />
              </div>
              <div style="width: 49.8%; height: 100%; background-color: #fff; padding: 0px; margin-left: 0.2%; background-color: #9AE5F8; position: relative; float: left;">
                <t t-call="quarter2" />
              </div>
            </div>
            <div style="width: 100%; height: 49.8%; padding: 0px; padding: 0.2% 0.4% 0.4% 0.4%;">
              <div style="width: 49.8%; height: 100%; background-color: #fff; padding: 0px; margin-right: 0.2%; background-color: #434C5A; position: relative; float: left; color: #434C5A;">
                <t t-call="quarter3" />
              </div>
              <div style="width: 49.8%; height: 100%; background-color: #fff; padding: 0px; margin-left: 0.2%; background-color: #005084; position: relative; float: left; color: #fff;">
                <t t-call="quarter4" />
              </div>
            </div>
          </div>
        </section>
      </div>
    </t>
  </template>
  <template id="signage_listxx" name="Signage List">
    <!--
         Original code. Not in use.
    -->
    <t t-call="website.layout">
      <div id="wrap" class="container">
        <div class="oe_structure oe_empty" />
        <div class="row col-md-offset-2">
          <h1>Signage</h1>
          <ul t-foreach="signages" t-as="signage">
            <li>
              <span t-field="signage.name" />
              Edit:
              <a t-att-href="'/signage/%s/edit' % signage.name">
                <span t-field="signage.name" />
              </a>
              <ul t-foreach="signage.area_ids" t-as="area">
                <li>
                  <span t-field="area.name" />
                  Limit
                  <span t-field="area.limit" />
                  <ul>
                    <t t-foreach="area.page_ids" t-as="page">
                      <li>
                        Look, edit:
                        <a t-att-href="'/signage/%s/edit' % page.id">
                          <span t-field="page.name" />
                        </a>
                        Delete:
                        <a t-att-href="'/signage_admin/%s/delete' % page.id">
                          <span t-field="page.name" />
                        </a>
                        Offset
                        <span t-field="page.offset" />
                      </li>
                    </t>
                    <li>
                      <a t-att-href="'/signage/%s/%s/new' % (signage.name, area.name)">
                        <span>New Page</span>
                      </a>
                    </li>
                  </ul>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </t>
  </template>
