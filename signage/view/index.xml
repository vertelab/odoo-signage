  <template id="signage_list" name="Signage List">
    <title>Master Your Showcases</title>
    <t t-call="website.layout">
      <div class="row">
        <div class="col-sm-4" />
        <div class="col-sm-4">
          <h2>Signage</h2>
          <!-- 
               <t t-raw="signages" />
               <img src="/signage/static/src/img/documentation.gif" />
          -->
          <!-- ##  FOR EACH-LOOP -->
          <ul t-foreach="signages" t-as="signage">
            <div class="accordion" id="accordionExample">
              <div class="card">
                <div class="card-header" t-att-id="'heading%s' % signage.id">
                  <h5 class="mb-0">
                    <!-- ## MENU :: COLLAPSE -->
                    <span class="fa fa-folder" style="margin: 0 auto;" data-original-title="Collapse project" t-att-title="'Collapse project, %s' % signage.name" />
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" t-att-data-target="'#collapse%s' % signage.id" aria-expanded="false" aria-controls="collapse" title="Collapse">
                      <span t-field="signage.name" />
                    </button>
                    <!-- ## MENU :: DELETE // EDIT -->
                    <!--
                         # DELETE IF AREA == 0 ELSE EDIT PROJECT
                         # /[project]/admin/menu/{menu.id}/delete
                         # https://fontawesome.com/v4.7.0/icon/trash
                    -->
                    <t t-set='nbr_areas' t-value='signage.mapped("area_ids")' />
                    <t t-if='len(nbr_areas) == 0'>
                      <a t-att-href="'/signage/admin/menu/%s/delete' % (signage.id)" target="_self" title="Delete Showcase.">
                        <i class="fa fa-trash" aria-hidden="true" />
                      </a>
                    </t>
                    <t t-if='len(nbr_areas) > 0'>
                      <a t-att-href="'/signage/admin/menu/%s/edit' % signage.id">
                        <span class="fa fa-pencil" style="margin: 0 auto;" data-original-title="Edit menu" title="Edit menu" border="0" />
                      </a>
                    </t>
                    <span>&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;</span>
                    <!-- ## MENU :: VIEW WITH TOKEN -->
                    <!--
                         # SHOW + TOKEN
                         # /signage/view/menu/{menu.name}/all?token=123
                         # https://fontawesome.com/v4.7.0/icons/
                         # https://fontawesome.com/v4.7.0/icon/eye
                         # https://fontawesome.com/v4.7.0/icon/file-o
                    -->
                    <!-- ## PRINT ONLY POSTS POSSIBLE TO VIEW / TO LOOK AT -->
                    <t t-set='nbr_pages' t-value='signage.area_ids.mapped("page_ids")' />
                    <t t-if='len(nbr_pages) > 0'>
                      <a t-att-href="'/signage/view/menu/%s/all?token=%s' % (signage.name_url, signage.token)" target="_blank" title="View with token.">
                        <i class="fa fa-eye" />
                        <span t-field="signage.name" />
                        <span>&amp;nbsp;&amp;nbsp;&amp;nbsp;</span>
                        <i class="fa fa-file-o" />
                        <span t-esc='len(nbr_pages)' />
                      </a>
                    </t>
                    <!-- ## PROJECT :: VIEW TO EDIT DATA  -->
                    <!--
                         # SHOW + TOKEN
                         # /signage/view/menu/{menu.id}/all/
                    -->
                  </h5>
                </div>
                <!-- ## AREA / CONTENT :: EDIT -->
                <div t-att-id="'collapse%s' % signage.id" class="collapse" t-att-aria-labelledby="'heading%s' % signage.id" data-parent="#accordionExample">
                  <div class="card-body">
                    <ul t-foreach="signage.area_ids" t-as="area">
                      <li>
                        <span class="fa fa-file-o" style="margin: 0 auto;" data-original-title="Open to view or to edit" t-att-title="'Open to view or to edit, %s' % signage.name" />
                        <span t-field="area.name" />
                        Limit
                        <span t-field="area.limit" />
                        <!-- ## TRASH IF NO PAGES ARE CONNECTED WITH THIS AREA
                             # /[project]/admin/submenu/{submenu.id}/delete
                             # https://fontawesome.com/v4.7.0/icon/trash
                        -->
                        <t t-if='len(nbr_pages) == 0'>
                          <a t-att-href="'/signage/admin/submenu/%s/delete' % (area.id)" target="_self" title="Delete Area.">
                            <i class="fa fa-trash" aria-hidden="true" />
                          </a>
                        </t>
                        <ul>
                          <!--
                               ## LOOP THROUGH ALL PAGES
                               # https://fontawesome.com/v4.7.0/icons/
                               # https://fontawesome.com/v4.7.0/icon/file
                          -->
                          <t t-foreach="area.page_ids" t-as="page">
                            <li>
                              <!-- ## LOOK -->
                              <span class="fa fa-file" style="margin: 0 auto;" data-original-title="Get content for project" t-att-title="'Get content for project %s' % signage.id" />
                              <span t-field="page.name" />
                            </li>
                          </t>
                        </ul>
                      </li>
                    </ul>
                    <!-- // ADD NEW  -->
                  </div>
                </div>
                <!-- ## ADD AREA -->
                <!-- // ## CONTENT :: EDIT -->
              </div>
            </div>
          </ul>
          <!-- // ##  FOR EACH-LOOP -->
          <!-- ## ADD SIGNAGE SHOWLIST -->
          <div class="col-sm-2" />
          <div class="col-sm-8"><!-- ## 2019-02-04 :: TEMPLATE SELECTION --></div>
          <div class="col-sm-2" />
        </div>
        <div class="col-sm-4" />
      </div>
    </t>
  </template>
  <template id="signage_default_layout_4" name="Signage Default Layout 2x2">
