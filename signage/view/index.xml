  <template id="signage_listxx" name="Signage List">
    <!--
         Original code. Not in use.
    -->
    <t t-call="website.layout">
      <div id="wrap" class="container">
        <div class="oe_structure oe_empty" />
        <div class="row col-md-offset-2">
          <h1>Signage</h1>
          <ul t-foreach="signages" t-as="signage">
            <li>
              <span t-field="signage.name" />
              Edit:
              <a t-att-href="'/signage/%s/edit' % signage.name">
                <span t-field="signage.name" />
              </a>
              <ul t-foreach="signage.area_ids" t-as="area">
                <li>
                  <span t-field="area.name" />
                  Limit
                  <span t-field="area.limit" />
                  <ul>
                    <t t-foreach="area.page_ids" t-as="page">
                      <li>
                        Look, edit:
                        <a t-att-href="'/signage/%s/edit' % page.id">
                          <span t-field="page.name" />
                        </a>
                        Delete:
                        <a t-att-href="'/signage_admin/%s/delete' % page.id">
                          <span t-field="page.name" />
                        </a>
                        Offset
                        <span t-field="page.offset" />
                      </li>
                    </t>
                    <li>
                      <a t-att-href="'/signage/%s/%s/new' % (signage.name, area.name)">
                        <span>New Page</span>
                      </a>
                    </li>
                  </ul>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </t>
