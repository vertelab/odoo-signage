<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="website.signage_page_template" name="Page Template">
    <t t-call="signage.layout">
      <style>
        <link href="https://fonts.googleapis.com/css?family=PT+Sans+Narrow" rel="stylesheet" />
      </style>
      <style>
        html, body {
        height: 100%;
        margin: 0;
        }
        main {
        font-family: 'PT Sans Narrow', sans-serif !important;
        height: 100%;
        }
      </style>
      <div id="wrap">
        <div class="oe_structure oe_empty" />
      </div>
    </t>
  </template>
  <!-- Front-end/Back-end integration -->
  <!-- User Navbar -->
  <template id="content_new_signage" inherit_id="website.user_navbar">
    <xpath expr="//div[@id='o_website_add_page_modal']//ul" position="inside">
      <li groups="website.group_website_designer">
        <a href="#" data-action="new_signage">
          <!-- 
               https://fontawesome.com/v4.7.0/icons/
               https://fontawesome.com/v4.7.0/icon/television ... fa-television
               https://fontawesome.com/v4.7.0/icon/film ... fa-film 
          -->
          <i class="fa fa-television" />
          <p>New Signage</p>
        </a>
      </li>
    </xpath>
  </template>
</odoo>
